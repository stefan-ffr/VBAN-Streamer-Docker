# .env.example
# Kopiere diese Datei zu .env und passe die Werte an deine Umgebung an

# VBAN-Konfiguration
VBAN_TARGET_IP=192.168.1.100          # IP-Adresse des Computers mit Voicemeeter
VBAN_PORT=6980                        # VBAN-Port (Standard: 6980)  
VBAN_STREAM_NAME=RaspberryPi          # Name des VBAN-Streams

# Bluetooth-Konfiguration
BT_DEVICE_NAME=VBAN-Speaker           # Name des Bluetooth-Lautsprechers
BT_AUTO_ACCEPT=true                   # Automatisches Pairing (true/false)

# Audio-Einstellungen  
SAMPLE_RATE=44100                     # Audio Sample-Rate (22050, 44100, 48000)
BUFFER_SIZE=1024                      # Audio-Puffer-Größe (256, 512, 1024, 2048)
AUDIO_BITRATE=320                     # Audio-Bitrate in kbps

# Container-Konfiguration
CONTAINER_NAME=vban-bluetooth-speaker # Name des Docker-Containers
RESTART_POLICY=unless-stopped         # Docker Restart-Policy

# Logging
LOG_LEVEL=info                        # Log-Level (debug, info, warn, error)
LOG_MAX_SIZE=50m                      # Maximum Log-Dateigröße
LOG_MAX_FILES=3                       # Anzahl der Log-Dateien

# Performance-Tuning
MEMORY_LIMIT=512m                     # Container Memory-Limit
CPU_LIMIT=1.0                         # Container CPU-Limit
PULSEAUDIO_LATENCY=50000              # PulseAudio Latenz in Mikrosekunden

# Erweiterte Bluetooth-Optionen
BT_CLASS=0x200414                     # Bluetooth Class of Device (Audio)  
BT_DISCOVERABLE_TIMEOUT=0             # Discoverable Timeout (0 = permanent)
BT_PAIRABLE_TIMEOUT=0                 # Pairable Timeout (0 = permanent)

# Erweiterte VBAN-Optionen
VBAN_QUALITY=1                        # VBAN-Qualität (0=PCM8, 1=PCM16, 2=PCM24, 3=PCM32)
VBAN_CHANNELS=2                       # Anzahl der Audio-Kanäle (1=Mono, 2=Stereo)

# Debug-Optionen
DEBUG_MODE=false                      # Debug-Modus aktivieren (true/false)
VERBOSE_LOGGING=false                 # Verbose Logging (true/false)

# Sicherheits-Optionen
SECURITY_NO_NEW_PRIVILEGES=true       # No New Privileges Security-Option
SECURITY_READ_ONLY=false              # Read-Only Root Filesystem (experimentell)

# Netzwerk-Optionen
NETWORK_MODE=host                     # Docker-Netzwerk-Modus (host empfohlen für Bluetooth)
EXPOSE_PORTS=false                    # Ports explizit exposieren (nicht nötig bei host-mode)

# Monitoring
HEALTH_CHECK_INTERVAL=30s             # Health-Check Intervall
HEALTH_CHECK_TIMEOUT=10s              # Health-Check Timeout
HEALTH_CHECK_RETRIES=3                # Health-Check Wiederholungen

# Beispiel-Werte für verschiedene Setups:

# Niedrige Latenz (Gaming/DJ):
# SAMPLE_RATE=48000
# BUFFER_SIZE=256
# PULSEAUDIO_LATENCY=25000

# Hohe Qualität (Musik-Streaming):
# SAMPLE_RATE=48000  
# BUFFER_SIZE=1024
# AUDIO_BITRATE=320

# Ressourcen-sparsam (Pi 3):
# SAMPLE_RATE=44100
# BUFFER_SIZE=2048
# MEMORY_LIMIT=256m
# CPU_LIMIT=0.8