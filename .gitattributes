# Auto detect text files and perform LF normalization
* text=auto

# Shell scripts always use LF
*.sh text eol=lf
*.bash text eol=lf

# Docker files always use LF
Dockerfile text eol=lf
.dockerignore text eol=lf

# YAML files
*.yml text eol=lf
*.yaml text eol=lf

# Configuration files
*.conf text eol=lf
*.pa text eol=lf
*.json text eol=lf

# Documentation
*.md text eol=lf
LICENSE text eol=lf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.zip binary
*.tar binary
*.gz binary
